{
    "manifest_version": 1,
    "name": "Borderify",
    "version": 0.1,

    "description": "Shows a border on thisissidam website",

    "icons": {
        "file": "Alecive-Flatwoken-Apps-Whatsapp-C.ico"
    },

    "browser_specific_settings": {
        "gekko": {
            "id": "borderify@example.com"
        }
    },

    "content_scripts": [
        {
            "matches": ["*://*.thisissidam.wordpress.com/*"],
            "js": "main.js"
        }
    ],

    "permissions": [
        "webRequest",
        "storage"
    ]
}
